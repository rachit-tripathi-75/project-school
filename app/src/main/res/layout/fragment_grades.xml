<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.GradesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Grades Tab Content -->
        <LinearLayout
            android:id="@+id/gradesContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <!-- Term 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:stateListAnimator="@animator/card_elevation_animator"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/llTerm1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/semester1Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Term 1 - 2024"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivTerm1Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/blue_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTerm1Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <!-- Subject grades would go here -->
                        <!-- Download Report Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDownloadReportTerm1"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:text="Download Report"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_download"
                            app:iconSize="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Term 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:stateListAnimator="@animator/card_elevation_animator"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/llTerm2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/semester2Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Term 2 - 2024"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivTerm2Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/blue_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTerm2Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <!-- Subject grades would go here -->
                        <!-- Download Report Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDownloadReportTerm2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:text="Download Report"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_download"
                            app:iconSize="16dp" />
                    </LinearLayout>

                    <!-- Content would be similar to Semester 1 -->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Term 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:stateListAnimator="@animator/card_elevation_animator"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/llTerm3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/semester3Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Final Exam - 2024"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivTerm3Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/blue_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTerm3Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <!-- Subject grades would go here -->
                        <!-- Download Report Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDownloadReportTerm3"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:text="Download Report"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_download"
                            app:iconSize="16dp" />
                    </LinearLayout>

                    <!-- Content would be similar to Semester 1 -->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Term 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:stateListAnimator="@animator/card_elevation_animator"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:id="@+id/llTerm4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/semester4Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Final Exam - 2024"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivTerm4Arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/blue_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTerm4Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <!-- Subject grades would go here -->
                        <!-- Download Report Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDownloadReportTerm4"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:text="Download Report"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_download"
                            app:iconSize="16dp" />
                    </LinearLayout>

                    <!-- Content would be similar to Semester 1 -->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>





</FrameLayout>